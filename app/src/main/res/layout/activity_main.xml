<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- Top App Name -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="UberAutoBooker"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/etSearchLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search location"
        android:padding="12dp"
        android:background="@drawable/search_bar_bg"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0B0B0"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:inputType="text" />

    <!-- Map -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Pickup Info -->
    <TextView
        android:id="@+id/tvPicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Pickup &amp; Drop not selected"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="16sp" />

    <!-- Buttons -->
    <Button
        android:id="@+id/btnPickDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:text="Pick Date &amp; Time"
        android:layout_margin="8dp" />

    <Button
        android:id="@+id/btnSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:text="Schedule Booking"
        android:layout_margin="8dp" />

    <Button
        android:id="@+id/btnEnableAccessibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:text="Enable Accessibility Service"
        android:layout_margin="8dp" />

    <!-- Status -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:text="Status will appear here" />

</LinearLayout>
